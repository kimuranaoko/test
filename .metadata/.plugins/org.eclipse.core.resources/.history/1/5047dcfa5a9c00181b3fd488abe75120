package com.internousdev.ecsite.action;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.ecsite.dao.ItemTableDAO;
import com.internousdev.ecsite.dto.ItemTableDTO;
import com.opensymphony.xwork2.ActionSupport;

public class ItemContentsAction extends ActionSupport implements SessionAware{

	public Map<String,Object> session;
	private ItemTableDAO itemTableDAO = new ItemTableDAO();
	private ArrayList<ItemTableDTO> itemContentsList = new ArrayList<ItemTableDTO>();

	public String execute() throws SQLException{

		itemContentsList = itemTableDAO.getItemContents("itemName");
		String result = SUCCESS;
		return result;
	}

	@Override
	public void setSession(Map<String,Object> session){
		this.session = session;
	}

	public ArrayList<ItemTableDTO> itemContentsList(){
		return this.itemContentsList;
	}

}
